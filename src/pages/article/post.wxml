<navigation-bar title="{{navTitle}}" bg-color="#FFFFFF" show-home="{{false}}">
  <view class="post-page">
    <block wx:if="{{pageType === 'post'}}">
      <!-- 选择版块 -->
      <view class="title">
        <view class="title-text">分类：</view>
        <view class="class-text" bindtap="changeTab" >
          {{tabName}} <image class="class-icon" src="../../image/select/select-aorrow.png" />
        </view>
      </view>

      <!-- 帖子标题 -->
      <view class="title">
        <view class="title-text">标题：</view>
        <input class="title-input" placeholder="请输入标题..."  placeholder-class="input-text"
          data-field="title"
          bindinput="handleInput"/>
      </view>
    </block>

    <!-- 帖子内容 -->
    <view class="content {{contentFocus ? 'focus' : ''}}">
      <textarea class="content-input" placeholder="请输入内容..." value=""
        data-field="content"
        bindinput="handleInput"
        bindfocus="handleContentFocus"
        bindblur="handleContentBlur"/>
    </view>

    <!-- 上传图片 -->
    <view class="add-box"><view class="add-pic" bindtap="addImage"></view></view>
    <view class="button">确认发布</view>
  </view>
</navigation-bar>
